<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="oc.md.mapper.IndexMapper">
	<select id="mainRecipeList" resultType="Recipe">
		select * from RECIPE where user_type='MANAGER'
	</select>
	
	<select id="mainFoodList" resultType="Food">
		<![CDATA[
		select * from (select ROWNUM rnum, aa.* from 
		(select * from FOOD order by f_date desc) aa) 
		where rnum between 1 and 8
		]]>
	</select>
</mapper>